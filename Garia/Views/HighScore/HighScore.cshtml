@model HighScoreModel
@using Garia.Models
@using Garia.Core.Entities

@{
    ViewBag.Title = "HighScore";
}


<div class="col-md-6 m-b-10">
    <!-- START WIDGET -->
    <div class="widget-11-2 panel no-border panel-condensed no-margin widget-loader-circle">
        <div class="panel-heading top-right">
            <div class="panel-controls">
             
            </div>
        </div>
        <div class="padding-25">
            <div class="pull-left">
                <h2 class="text-success no-margin HighScoreHeadLine">HIGHSCORES MONTHLY</h2>

                <p class="no-margin HighScoreUnderLine">Sales Managers </p>
            </div>
            <h3 class="pull-right semi-bold">
                <sup>
                    <small class="semi-bold"></small>
                </sup>
               
            </h3>
            <div class="clearfix"></div>
        </div>
        
        <div class="table-responsive" style="overflow:auto; ">
            <div class="widget-11-2-table">
                <table class="table table-hover">
                    

                    @{ int countMonthly = 1;
                         foreach (HighScore score in Model.HighScoreMonthly)
                         {
                            <tr>
                                <td class="font-montserrat all-caps fs-12 col-lg-2"># @countMonthly</td>
                                <td class="font-montserrat all-caps fs-12 col-lg-3">@score.Fname @score.lname</td>
                                <td class="text-right b-r b-dashed b-grey col-lg-3">
                                    <span class="hint-text small">@score.SaleNO</span>
                                </td>
                                <td class="text-right col-lg-4">
                                    <span class="font-montserrat fs-18">$@score.TotalsaleByDealer.ToString("N0")</span>
                                </td>
                            </tr>
                             countMonthly++;
                         }
                    }






                </table>
            </div>
        </div>

    </div>
    <!-- END WIDGET -->
</div>
