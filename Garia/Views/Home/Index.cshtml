<!-- START Highscore -->
<div class="col-md-6 m-b-10">
    <!-- START WIDGET -->
    <div class="widget-11-2 panel no-border panel-condensed no-margin widget-loader-circle">
        <div class="panel-heading top-right">
            <div class="panel-controls">

            </div>
        </div>
        <div class="padding-25">
            <div class="pull-left">
                <h2 class="text-success no-margin HighScoreHeadLine">INDEX HIGHSCORES</h2>
                <p class="no-margin HighScoreUnderLine">(Dealers) This month not included</p>
            </div>
            <h3 class="pull-right semi-bold">
                <sup>
                    <small class="semi-bold"></small>
                </sup>

            </h3>
            <div class="clearfix"></div>
        </div>

        <div class="table-responsive" style="overflow:auto; ">
            <div class="widget-11-2-table">
                <table class="table table-hover">

                    @{
                        int counterDealer = 1;
                        foreach (IndexModel index in Model.DealerIndex1)
                        {
                            <tr>
                                <td class="font-montserrat all-caps fs-12 col-lg-1">#@counterDealer</td>
                                <td class="font-montserrat all-caps fs-12 col-lg-3">@index.Fname</td>
                                <td class="font-montserrat all-caps fs-12 col-lg-3"></td>
                                <td class=" b-r b-dashed b-grey col-lg-2">
                                    <span class="hint-text small">$@index.Revenue</span>
                                </td>
                                <td class="col-lg-3">
                                    @if (@index.Index > 0)
                                    {
                                        <span class="font-montserrat fs-18">@String.Format("{0:0.0}", index.Index) </span>
                                    }
                                    else
                                    {
                                        <span class="font-montserrat fs-18">No Index</span>
                                    }
                                </td>
                            </tr>
                                    counterDealer++;
                        }
                    }
                </table>
            </div>
        </div>

    </div>
    <!-- END WIDGET -->
</div>
