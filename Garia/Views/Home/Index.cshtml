@model DashboardModel
@using Garia.Models
@using Garia.Core.Entities

@{
    ViewBag.Title = "Home Page";
}
<!-- START WIDGET -->
<div class="col-md-3 m-b-3">
    <!--Using "!Important" because of wierd css overwriting -->
    <div class="widget-9 panel " style="background-color: #0da899; !important">
        <div class="container-xs-height full-height">
            <div class="row-xs-height">
                <div class="col-xs-height col-top">
                    <div class="panel-heading  top-left top-right">
                        <div class="panel-title text-black">
                            <span class="font-montserrat fs-11 all-caps">
                                My Revenue this month <i class="fa fa-chevron-right"></i>
                            </span>
                        </div>
                        <div class="panel-controls">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-xs-height">
                <div class="col-xs-height col-top">
                    <div class="p-l-20 p-t-15">
                        @{
                            if (Model.EmployeeRevenueThisMonth != null && Model.EmployeeRevenueThisYear != null)
                            {
                                <h3 class="no-margin p-b-5 text-white">$@Model.EmployeeRevenueThisMonth.EmployeeRevenue.ToString("N0")</h3>
                                <h6 class="no-margin p-b-5 text-white">Budget   $@Model.EmployeeRevenueThisMonth.Budget.ToString("N0")</h6>
                                <span class=" hint-text text-black">@Model.EmployeeRevenueThisMonth.Procentage% compared to budget</span>

                            }
                            else
                            {
                                <h3 class="no-margin p-b-5 text-white">No sales</h3>
                            }
                        }

                    </div>
                </div>
            </div>
            <div class="row-xs-height">
                <div class="col-xs-height col-bottom">
                    <div class="progress progress-small m-b-20">
                        <!-- START BOOTSTRAP PROGRESS -->
                        @if (Model.EmployeeRevenueThisMonth != null && Model.EmployeeRevenueThisYear != null)
                        {
                            <div class="progress-bar progressbarWhiteCustom" data-percentage="@Model.EmployeeRevenueThisMonth.Procentage%"></div>
                        }
                        else
                        {
                            <div class="progress-bar progressbarWhiteCustom" data-percentage="0"></div>

                        }

                        <!-- END BOOTSTRAP PROGRESS -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END WIDGET -->
